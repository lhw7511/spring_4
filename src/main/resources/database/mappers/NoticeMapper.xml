<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="com.choa.s4.board.notice.NoticeDAO">
	<select id="noticeSelect" parameterType="NoticeDTO" resultType="NoticeDTO">
		select * from board where num = #{num}
	</select>

	<select id="noticeList" resultType="NoticeDTO" parameterType="com.choa.s4.util.Pager">
		select * from
		(select rownum as R, N.* from 
		(select * from board where 
		<choose>
			<when test="kind =='con'">
				contents
			</when>
			<when test="kind =='wr'">
				writer
			</when>
			
			
			<otherwise>
				title
			</otherwise>
		</choose>		
		like '%'||#{search}||'%' order by num desc) N)
		where R between #{startRow} and #{lastRow}
	</select>
	
	
	<insert id="noticeWrite" parameterType="NoticeDTO">
		insert into board values(board_seq.nextval,#{title},#{writer},#{contents},sysdate,0)
	</insert>
	
	<delete id="noticeDelete" parameterType="NoticeDTO">
		delete from board where num=#{num}
	</delete>
	
	<update id="noticeUpdate" parameterType="NoticeDTO">
		update board set title=#{title},contents=#{contents} where num=#{num}
	</update>
	
	<select id="noticeCount" resultType="java.lang.Long" parameterType="com.choa.s4.util.Pager">
		select count(num) from board where
		<choose>
			<when test="kind =='con'">
				contents
			</when>
			<when test="kind =='wr'">
				writer
			</when>
				
			<otherwise>
				title
			</otherwise>
		</choose>		
		like '%'||#{search}||'%'
	</select>
</mapper>